.order_top{
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    position: fixed;
    top: 0;
    background: #fff;
    overflow: hidden;
    font-size: 28rpx;
    color: #1c2951;
    z-index: 2;
}
.order_main{
    display: flex;
    display: -webkit-flex;
    flex-wrap: wrap;
}
.order_main view{
    width: 20%;
    text-align: center;
}
.order_main view text{
    display: inline-block;
    height: 98rpx;
    box-sizing: border-box;
    border-bottom:2rpx solid #fff;
}
.order_main .order0{
    color: #d70a1d;
}
.order_main .order0 text{
  border-bottom:2rpx solid #d70a1d;
}
/*列表*/
.order_list{
    overflow: hidden;
    padding-top: 140rpx;
}
.order_con{
    background: #fff;
    font-size: 28rpx;
    color: #1c2951;
    margin-bottom: 40rpx;
}
.order_dian{
    padding: 0 6%;
    line-height: 82rpx;
    overflow: hidden;
    border-bottom: 2rpx solid #e5e5e5;
}
.order_dian .left{
    float: left;
}
.order_dian .left .left_img{
    width: 170rpx;
    height: 82rpx;
    position: relative;
    float: left;
}
.order_dian .left .left_img image{
    width: 100%;
    height: 40rpx;
    vertical-align: middle;
}
.order_dian .left .left_dian_name{
    float: left;
    color: #c9e019;
}
.order_dian .right{
    float: right;
    color: #d70a1d;
}
/*中间*/
.order_middle{
    padding: 0 6%;
    overflow: hidden;
    border-bottom: 2rpx solid #e6e6e6;
}
.middle_img{
    width: 26%;
    height: 284rpx;
    overflow: hidden;
    position: relative;
    float: left;
}
.middle_img image{
    width: 97%;
    height: 198rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
}
.middle_center{
    float:right;
    margin-left: 4%;
    width: 70%;
    padding-top: 56rpx;
}
.middle_center .middle_name{
    line-height: 36rpx;
    height: 72rpx;
    text-align: left;
    overflow: hidden;
}
.middle_center .middle_color{
    color: #999;
    margin-top: 20rpx;
}
.detail_right{
  font-size: 30rpx;
  overflow: hidden;
}
.detail_right .detail_ml{
  float: left;
}
.detail_right .middle_price{
  float: right;
  padding-right: 12rpx;
}
.middle_right{
   overflow: hidden;
}
.middle_right .middle_hui{
    height:44rpx;
    width:136rpx;
    background:#d70a1d;
    color:#fff;
    line-height:44rpx;
    text-align:center;
    margin:20rpx 0 0;
    float: left;
}
.middle_right .middle_number{
    padding-right: 12rpx;
    float: right;
    margin-top: 25rpx;
}
.all_price{
    padding: 0 6%;
    overflow: hidden;
    border-bottom: 2rpx solid #e5e5e5;
    line-height: 86rpx;
    text-align: right;
}
.order_bottom{
    overflow: hidden;
    padding:24rpx 9% 24rpx 0;
}
.order_bottom view{
    float: right;
    width: 152rpx;
    height: 60rpx;
    border-radius: 6rpx;
    text-align: center;
    line-height: 60rpx;
}
.order_bottom .order_cancel{
    border: 2rpx solid #b2b2b2;
    color: #666;
    margin-right: 26rpx;
}
.order_bottom .order_pay{
    color: #d70a1d;
    border: 2rpx solid #d70a1d;
}
.nodata1,.nodata2{
  text-align: center;
  font-size: 32rpx;
  color: #babcc0;
}
.nodata1{
  margin-top: 30%;
}
.nodata2{
  margin-top: 60%;
}