/*发票*/
.fapiao{                 display: none;  }
/*留言*/
.ly .right{
   width: 76%;             
}
.ly input{
  height:90rpx;
  border: 0;
  line-height:90rpx;
  background: #e7e7e7;
  border-radius: 8rpx;
  padding: 0 10rpx;
}
.ly .right .gray_input{
  color: #999;
}
.lyval{
  margin-bottom: 20rpx;
}
/*优惠券*/
.quan{
  border-bottom: 2rpx solid #e6e6e6;
}
.quan .right{
  color: #999;
}
.line_height .left,.total .left{
  float: left;
  font-size: 30rpx;
}
.line_height .right,.total .right{
  float: right;
  font-size: 30rpx;
}
/*合计*/
.total{
  overflow: hidden;
  margin-top: 20rpx;
}
.heji{
  text-align: right;
  font-size: 32rpx;
  line-height: 36rpx;
  padding-top: 30rpx;
  padding-bottom: 150rpx;
}
.heji .red{
  color: #d70a1d;
}
/*运费*/
.yunfei{
  color: #999;
}
/*支付*/
.add-car{
  width: 93%;
  padding: 0 2.5%;
  overflow: hidden;
  position: fixed;
  bottom: 20rpx;
  background: #fff;
  z-index: 2;
}
.add-car view{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background: #d70a1d;
  border-radius:10rpx;
}