.top{
    background:url(https://www.xiongshangedu.com/xcx_niomio/images/pers_bg.png) no-repeat center top;
    background-size:100% 100%;
    height:348rpx;
    position: relative;
}
.topcenter{
    padding:60rpx 0 0 0;
    color:#fff;
    font-size:34rpx;
    text-align:center;
}
.topcenter .log_img{
    width:122rpx;
    height:122rpx;
    overflow:hidden;
    margin:0 auto;
    border-radius: 50%;
}
.topcenter .log_name{
   margin:30rpx auto 0;
   line-height:1.2;
   display:inline-block;
   padding:8rpx 30rpx;
   border:2rpx solid #fff;
   border-radius:10rpx;
}
/*内容列表*/
.main_con{
  overflow: hidden;
  margin-top: 40rpx;
}
.main_con .main_list{
  padding: 46rpx 0 28rpx;
  font-size: 28rpx;
  text-align: center;
  color: #1c2951;
}
.main_con .main_list image{
  width: 80rpx;
}
/*列表1*/
.main_con1{
  background: #ccc;
  display: flex;display: -webkit-flex;
  flex-wrap: wrap;
  background: #fff;
  margin-top: 0;
}
.main_con1 .main_list{
  width: 20%;
  font-size: 24rpx;
}
.main_con1 .main_list .main_list_img{
  height: 90rpx;
}
/*列表2*/
.main_con2{
  overflow: hidden;
  padding-bottom: 60rpx;
}
.main_con2 .main_list{
  line-height: 100rpx;
  font-size: 32rpx;
  padding: 0 4%;
  width: 92%;
  text-align: left;
  border-bottom: 2rpx solid #e5e5e5;
}
.main_con2 .main_list image{
  vertical-align: middle;
  width: 50rpx;
  margin-right: 50rpx;
}
.main_con2 .right{
  float: right;
  color: #ccced4;
  font-size: 30rpx;
  text-align: right;
}
.main_con2 .right image{
  width: 20rpx;
  margin: 0;
}