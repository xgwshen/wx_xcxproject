.hot_list{
  padding:16rpx 2.5% 0;
  overflow: hidden;
  display: flex;display: -webkit-flex;
  flex-wrap: wrap;
  background: #e6e6e6;
}
.hot_wrap{
  width: 48%;
  margin-right: 4%;
  margin-bottom: 30rpx;
  background: #fff;
  text-align: center;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}
.hot_img{
  height: 346rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.hotImg{
  position: absolute;
  right: 0;
  top: 33rpx;
  width: 32%;
}
.hot_txt{
  width: 92%;
  margin: 0 auto;
  padding-bottom: 40rpx;
  text-align: left;
}
.hot_txt .hot_name{
  font-size:26rpx;
  color: #1c2951;
  line-height: 1.3;
  padding-left: 8rpx;
}
.hot_txt .hot_pri{
  overflow: hidden;
  line-height: 44rpx;
  margin-top: 10rpx;
}
.hot_txt .hot_price{
  font-size: 40rpx;
  color: #d70a1d;
  text-align: left;
  float: left;
}
